//-----------------------------Estructura---------------------------------------

	struct Jugadores
	{
		string Nombre;
		struct Jugadores *RIGHT;
		struct Jugadores *LEFT;
		struct Jugadores *Padre;
	};

	typedef struct Jugadores *ArbolABB;


//-----------------------------Métodos------------------------------------------

	ArbolABB CrearNombreABB(ArbolABB &Padre, string Nombre);

